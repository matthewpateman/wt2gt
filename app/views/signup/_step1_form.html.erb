<%= form_tag :action => 'step2' do %>

    <%= text_field_tag :username, nil, :placeholder => "Username" %>

    <%= password_field_tag :password, nil, :placeholder =>"Password" %>

    <%= password_field_tag :password_confirmation, nil, :placeholder =>"Confirm password" %>

    <%= hidden_field_tag 'first_name', @first_name %>
    <%= hidden_field_tag 'last_name', @last_name %>
    <%= hidden_field_tag 'email', @email %>
    
    <div class="actions">
    <%= submit_tag 'Next' %>
  </div>

<% end %>