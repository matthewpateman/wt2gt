<section id="full">
  <div class="content">
    <h1 id="title">Log In</h1>


    <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:error] %>
      <p class="error"><%= flash[:error] %></p>
    <% end %>
  <%= form_tag '/sessions/create' do %>
    
        <%= text_field_tag :email_or_username, @email_or_username, :placeholder => 'E-mail or Username' %>
        <%= password_field_tag :password, nil, :placeholder => 'Password' %>
        <%= submit_tag 'Log in' %>
<% end %>

  </div>
</section>

