<h1>Listing items</h1>

<table>
  <tr>
    <th>User</th>
    <th>Name</th>
    <th>Price</th>
    <th>Price currency</th>
    <th>Merchant</th>
    <th>Url</th>
    <th>Private</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.user_id %></td>
    <td><%= item.name %></td>
    <td><%= item.price %></td>
    <td><%= item.price_currency %></td>
    <td><%= item.merchant_id %></td>
    <td><%= item.url %></td>
    <td><%= item.private %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

