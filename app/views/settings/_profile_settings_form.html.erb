<%= form_tag :action => 'profile' do %>

  <div class="label"><%= label_tag :first_name %></div>
    <div class="field"><%= text_field_tag :first_name, @user.first_name %></div>

  <div class="label"><%= label_tag :last_name %></div>
    <div class="field"><%= text_field_tag :last_name, @user.last_name %></div>

  <div class="label"><%= label_tag :email %></div>
    <div class="field"><%= text_field_tag :email, @user.email %></div>

    <div class="label"><%= label_tag :username %></div>
    <div class="field"><%= text_field_tag :username, @user.username %></div>

    <div class="label"><%= label_tag :mobile_phone %></div>
    <div class="field"><%= text_field_tag :mobile_phone, @user.mobile_phone %></div>

    <div class="field"><%= submit_tag 'Update Profile Details' %></div>

<% end %>