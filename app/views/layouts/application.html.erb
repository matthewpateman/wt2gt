<!DOCTYPE html>
<html>
<head>
  <title>Wt2gt</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <%= link_to image_tag("logo.svg"), root_path %>
<ul>

<% if logged_in? %>

  <li> <%= link_to 'Log Out', '/sessions/destroy', {:method=>:delete} %></li>
  <li><%= link_to 'Settings', settings_path %></li>
  <li><%= link_to 'Friends', users_path %></li>
  <li><%= link_to_profile current_user.username, 'Me' %></li>
  <li><%= link_to 'Newsfeed*', items_path %></li>

<% else %>

  <% if !params[:controller].eql?('signup') %>
    <li><%= link_to 'Sign Up', signup_path %></li>
  <% end %>

  <% if !params[:action].eql?('login') %>
    <li><%= link_to 'Log In', login_path %></li>
  <% end %>

  
  <li><%= link_to 'About us', about_path %></li>
  <li><%= link_to 'Blog', blog_path %></li>
       
<% end %>

</ul>
<div class="clear"></div>
</header>

<div id="side">
  <%= yield :left %>
</div>
  
<%= yield %>

<%= render 'shared/footer' %>

</body>
</html>
